@model AddProductViewModel
@{
    ViewData["Title"] = "Add Products";
}

<h1>Add Products To Your Order</h1>
@{
    <h1>Selected Customer: @Model.SelectedCustomer.Name</h1>
    <h1>Selected Location: @Model.SelectedLocation.Name</h1>
}

<form asp-action="PlaceOrder">
    <div class="form-group">
        <label for="selProd">Select Product:</label>
        <select class="form-control" name="selProd" id="sel1">
            @foreach (var item in Model.SelectedLocation.Inventory)
            {
                <option value="@item.Key.ID">@item.Key.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Update Store Inventory" class="btn btn-primary" />
    </div>
</form>

@Html.ActionLink("Go Back", "PlaceOrder");

